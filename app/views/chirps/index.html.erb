<% if current_user %>
  <div align="right">
    Hello, <%= current_user.handle_name %><br />
    <%= link_to('Sign Out', destroy_user_session_path, :method => :delete) %><br />
    <%= link_to 'Edit Info', edit_user_path( :id => current_user.id ) %><br />
    <%= link_to 'Change Password', edit_user_registration_path %>
  </div>
<% end %>

<div class="container">
  <div class="chirp border-right-0 border-bottom-0 border-left-0 border border-primary bg-light">
    <%= link_to 'New Chirp', new_chirp_path %>
  </div>
  <% @chirps.each do |chirp| %>
    <div class="chirp border-right-0 border-bottom-0 border-left-0 border border-primary bg-light">
      <% if chirp.user.face %>
        <% face = chirp.user.face %>
        <% if face.content_type =~ /^image\/.*?(png|jpeg|gif)$/ %>
          <%= image_tag url_for({:action => 'face', :id=> face.id,
            :filename => face.name}), :alt => face.name, :class => 'face rounded-circle'
            %>
        <% else %>
          <%= image_tag 'default_face.png', :alt => 'No Photo', :class => 'face rounded-circle' %>
        <% end %>
      <% else %>
        <%= image_tag 'default_face.png', :alt => 'No Photo', :class => 'face rounded-circle' %>
      <% end %>
      <div class="chirp_right">
        <div class="user font-weight-bold"><%= chirp.user_id %></div>
        <div class="chirped_at"><%= chirp.chirped_at %></div>
        <div class="text"><%= chirp.chirp %></div>
        <div>
          <% if chirp.photo %>
              <% if chirp.file_type =~ /^image\/.*?(png|jpeg|gif)$/ %>
                <%= image_tag url_for({:action => 'photo', :id=> chirp.id,
                  :filename => chirp.file_name}), :alt => chirp.file_name, :class => 'photo'%>
                <% end %>
          <% end %>
        </div>
      </div>
      <div class="button row">
        <div class='col'><%= link_to 'Show', chirp %></div>
        <div class='col'><%= link_to 'Edit', edit_chirp_path(chirp) %></div>
        <div class='col'><%= link_to 'Destroy', chirp, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
  <% end %>
</div>


