<% if current_user %>
  <div align="right">
    Hello, <%= current_user.handle_name %><br />
    <%= link_to('Sign Out', destroy_user_session_path, :method => :delete) %><br />
    <%= link_to 'Edit Info', edit_user_path( :id => current_user.id ) %><br />
    <%= link_to 'Change Password', edit_user_registration_path %>
  </div>
<% end %>

<h1>Chirps</h1>

<table>
  <thead>
    <tr>
      <th colspan="2">User</th>
      <th>Chirp</th>
      <th>Photo</th>
      <th>Chirped at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chirps.each do |chirp| %>
      <tr>
        <td>
          <% if chirp.user.face %>
            <% face = chirp.user.face %>
            <% if face.content_type =~ /^image\/.*?(png|jpeg|gif)$/ %>
            <%= image_tag url_for({:action => 'face', :id=> face.id,
              :filename => face.name}), :alt => face.name
              %>
            <% else %>
              <%= image_tag 'default_face.png', :alt => 'No Photo' %>
            <% end %>
          <% else %>
            <%= image_tag 'default_face.png', :alt => 'No Photo' %>
          <% end %>
        </td>

        <td><%= chirp.user_id %></td>
        <td><%= chirp.chirp %></td>
        <td>
          <% if chirp.photo %>
          <p>
            <% if chirp.file_type =~ /^image\/.*?(png|jpeg|gif)$/ %>
              <%= image_tag url_for({:action => 'photo', :id=> chirp.id,
                :filename => chirp.file_name}), :alt => chirp.file_name,
                :size => "60x60" %>
              <% end %>
            <br />
          </p>
        <% end %>
      </td>
        <td><%= chirp.chirped_at %></td>
        <td><%= link_to 'Show', chirp %></td>
        <td><%= link_to 'Edit', edit_chirp_path(chirp) %></td>
        <td><%= link_to 'Destroy', chirp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

