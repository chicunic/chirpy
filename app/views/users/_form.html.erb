<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email, class: "form-control", placeholder: "Enter email" %>
  </div>
  <div class="form-group">
    <%= form.label :handle_name %>
    <%= form.text_field :handle_name, id: :user_handle_name, class: "form-control", placeholder: "Enter your name" %>
  </div>
  <div class="form-group">
    <%= form.submit class: "btn btn-pink btn-block" %>
  </div>
<% end %>

<hr />
<%= form_for @face, :url => "/faces/update",
    :html => {:multipart => true}, :method => :put do %>
  <div class="custom-file">
    <%= file_field :file, :upload, class: "custom-file-input" %>
    <label class="custom-file-label" for="file_upload">Choose a picture</label>
  </div>
  <div><%= submit_tag "Upload Photo", class: "btn btn-pink btn-block" %></div>
<% end %>
