<!-- log_in -->
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-signin">
    <h2 class="form-signin-heading"><%= t "please_sign_in" %></h2>
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: (t "email_address") %>
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: (t "password") %>
    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    <div class="actions">
      <%= f.submit (t "sign_in"), class: "btn btn-lg btn-pink btn-block" %>
    </div>
  </div>
<% end %>
